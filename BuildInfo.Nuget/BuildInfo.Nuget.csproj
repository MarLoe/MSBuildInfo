<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>netstandard2.0;netstandard2.1;net8.0;net9.0</TargetFrameworks>
    <AssemblyName>BuildInfo.Tasks</AssemblyName>
    <OutputType>Library</OutputType>
    <IncludeBuildOutput>true</IncludeBuildOutput>
    <PackageOutputPath>./nupkg</PackageOutputPath>
  </PropertyGroup>

  <PropertyGroup>
    <PackageId>BuildInfo</PackageId>
    <Version>1.0.0</Version>
    <Authors>Martin LÃ¸bger</Authors>
    <Description>Generates a BuildInfo.json file during build - containing information about the build</Description>
  </PropertyGroup>

  <ItemGroup>
    <None Include="build\BuildInfo.targets" Pack="true" PackagePath="build\BuildInfo.targets" />
  </ItemGroup>

  <Target Name="DeleteLocalCache" BeforeTargets="Pack">
    <RemoveDir Directories="$(NugetPackageRoot)/$(PackageId.ToLower())" />
  </Target>

</Project>